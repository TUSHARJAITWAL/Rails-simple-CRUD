<p><%= notice %></p>
<h1>All Student's</h1>
<p><%= link_to "New-Student",new_student_path %></p>
<table style="width:70%">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>College</th>
        <th colspane=3>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
            <th><%= student.first_name %></th>
            <th><%= student.last_name %></th>
            <th><%= student.email %></th>
            <th><%= student.address %></th>
            <th><%= student.college %></th>
            <th><%= link_to "Show", student %></th>
            <th><%= link_to "Edit", edit_student_path(student) %></th>
            <th><%= link_to "Delete",student, data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %></th>
        </tr>
    <% end %>
    </tbody>
</table>